<%- include('blocks/userheader.ejs') %>
<section class="section contact-me" data-section="section4">
    <div class="container">
      <div class="section-heading">
        <h2>Post Blood Request</h2>
        <div class="line-dec"></div>
      </div>

      <div class="row">            
        <div class="container">
         
          <form id="contact" action="/user/saverequest" method="post">
            <div class="row">
              <div class="col-md-6">
                <fieldset>
                  <input
                    name="name"
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Person Name..."
                    required=""
                  />
                </fieldset>
              </div>
              <div class="col-md-6">
                <fieldset>
                  <input
                    name="contact"
                    type="text"
                    class="form-control"
                    id="contact"
                    placeholder="Contact ..."
                    required=""
                  />
                </fieldset>
              </div>
              <div class="col-md-6">
                <fieldset>
                  <input
                    name="hosital"
                    type="text"
                    class="form-control"
                    id="hospital"
                    placeholder="Hospital Name.."
                    required=""
                  />
                </fieldset>
              </div>
              <div class="col-md-6">
                <fieldset>
                  <input
                    name="city"
                    type="text"
                    class="form-control"
                    id="city"
                    placeholder="City ...."
                    required=""
                  />
                </fieldset>
              </div>
              <div class="col-md-6">
                <fieldset>
                  <select name="group"
                    class="form-control"
                    id="group" required>

                    <option>A+</option>
                    <option>A-</option>
                    <option>B+</option>
                    <option>B-</option>
                    <option>O+</option>
                    <option>O-</option>
                    <option>AB+</option>
                    <option>AB-</option>

                  </select>
                </fieldset>
              </div>
              
              <div class="col-md-6">
                <fieldset>
                  <button type="submit" id="form-submit" class="button">
                   Send Request
                  </button>
                  &nbsp;
                  <b class='text-danger'>
                    </b>
                </fieldset>
              </div>
            </div>
          </form>              
      </div>
    </div>
    <hr>

    <table class='table'>
        <tr>
          <th>Date</th>
          <th>Person Name</th>
          <th>Hospital</th>
          <th>Contact</th>
          <th>Group</th>
        </tr>

        <%
          list.forEach(rec=>
          { %>

            <tr>
              <td><%=rec.date%></td>
              <td><%=rec.name%></td>
              <td><%=rec.hosital%> (<%=rec.city%>)</td>
              <td><%=rec.contact%></td>
              <td><%=rec.group%></td>
            </tr>

        <%  })
        %>
    </table>

    </div>
</section>

<%- include('blocks/footer.ejs') %>